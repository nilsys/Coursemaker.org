// checkmark
.w-checkmark
	li
		position relative
		padding-left 25px
		&:before
			content ''
			position absolute
			top 0
			left 0
			display block
			width 15px
			height 15px
			background url(../../static/check.svg) no-repeat center center / cover
			top 4px
		&:not(:last-child)
			margin-bottom 10px


// custom checkbox
toggleHeight = 32px
.custom-checkbox
	position relative
	cursor pointer
	[type="checkbox"]
		opacity 0
		width 52px
		height toggleHeight
		&:checked
			+ .toggle
				&:before
					background #48bb78
				&:after
					transform translateX(20px)

	label
		line-height toggleHeight

	.toggle
		position absolute
		left 0
		top 0
		width 52px
		height toggleHeight
		pointer-events none
		&:before, &:after
			content ''
			position absolute
		&:before
			top 0
			left 0
			width 52px
			height 32px
			border-radius 50px
			background #bbb
			transition .3s all ease
		&:after
			transition .3s all ease
			top 3px
			left 3px
			width 26px
			height 26px
			border-radius 50%
			background white

// featured post
#featured-post .img-wrapper
	position relative
	&:before
		content ''
		position absolute
		left 50%
		top -30%
		bottom -30%
		width 70%
		dot(#48bb78)

	@media(max-width: 768px)
		&:before
