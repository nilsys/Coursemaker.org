// checkmark
.w-checkmark
	li
		position relative
		padding-left 25px
		&:before
			content ''
			position absolute
			top 0
			left 0
			display block
			width 15px
			height 15px
			background url(../../static/check.svg) no-repeat center center / cover
			top 4px
		&:not(:last-child)
			margin-bottom 10px
