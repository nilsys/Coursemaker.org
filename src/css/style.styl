// dot pattern
dot(bg)
	background -webkit-radial-gradient(bg 15%, transparent 15%), -webkit-radial-gradient(bg 15%, transparent 15%), transparent !important
	background-size 10px 10px !important

.container
	padding 0 30px

header.is-alt .container
	position relative

	&:before
		content ''
		position absolute
		left 2rem
		right 2rem
		bottom 0
		height 1px
		background #eee
		transition .3s all ease

header.is-alt.shadow .container:before
	opacity 0

.post-list #privacy
	display none

footer ahover
	text-decoration underline

.article.article *
	font-size unset
	margin-bottom unset
	line-height 1.85

article > h1 > a,
article > h2 > a,
article > h3 > a,
article > h4 > a,
article > h5 > a,
article > h6 > a
	display none

.article.article.article h1
	font-size 38px
	font-weight 800

.article.article.article h2
	font-size 26px
	font-weight 800

.article.article.article h3
	font-size 22px
	font-weight 800

.article.article.article h4
	font-weight 800
	margin-top 50px !important

.article.article.article h5
	font-weight 600

.article.article.article code
	padding 30px
	background black
	color #fff
	display block
	overflow scroll

.popup-wrapper
	transition .3s all ease
	opacity 0
	pointer-events none

.popup-wrapper .popup
	opacity 0
	transform translateY is-active(30px)
	transition .3s all ease

	.img-wrapper
		.wrapper-bg
			border-top-left-radius 100%
			border-top-right-radius 100%
			height 70%
			transform-origin top
			transform scale(1.2)

.popup-wrapper.is-active
	opacity 1
	pointer-events auto

.popup-wrapper.is-active .popup
	opacity 1
	transform none
	transition-delay .3s





// rounded bg
.rounded-bg
	transform scale(2)
	&.bottom
		transform-origin bottom
		border-bottom-left-radius 50%
		border-bottom-right-radius 50%
	&.top
		transform-origin top
		border-top-left-radius 50%
		border-top-right-radius 50%

@media (max-width: 768px)
	.rounded-bg
		transform scale(8)

#home-hero
	.rounded-bg
		bottom -150px

